<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
<div class="alert alert-dismissible alert-danger" role="alert">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<% errors.forEach(function (error) { %>
		<%= __(error) %>
	<% }) %>
</div>
<% } %>

<div class="container">
	<div class="row-fluid">
		<div class="header">
			<h1>Login</h1>
			<p class="lead">Don't have an account, <a href="/register" title="Register for a new account.">register</a> here.</p>
		</div>

		<form role="form" action="/auth/local" method="post" class="form-horizontal">
			<div class="form-group">
				<label for="loginUserEmail" class="col-sm-2 control-label">Username or Email</label>
				<div class="col-sm-10">
					<input id="loginUserEmail" type="text" name="identifier" placeholder="" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="loginPassword" class="col-sm-2 control-label">Password</label>
				<div class="col-sm-10">
					<input id="loginPassword" type="password" name="password" placeholder="" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">Sign in</button>
				</div>
			</div>
		</form>

