<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
<div class="alert alert-dismissible alert-danger" role="alert">
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<% errors.forEach(function (error) { %>
		<%= __(error) %>
	<% }) %>
</div>
<% } %>

<div class="container">
	<div class="row-fluid">
		<div class="header">
			<h1>Register</h1>
			<p class="lead">Already have an account, <a href="/login" title="Login to your account.">login</a> here.</p>
		</div>

		<form role="form" action="/auth/local/register" method="post" class="form-horizontal">
			<div class="form-group">
				<label for="loginUsername" class="col-sm-2 control-label">Username</label>
				<div class="col-sm-10">
					<input id="loginUsername" type="text" name="username" placeholder="" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="loginEmail" class="col-sm-2 control-label">Email</label>
				<div class="col-sm-10">
					<input id="loginEmail" type="text" name="email" placeholder="" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="loginPassword" class="col-sm-2 control-label">Password</label>
				<div class="col-sm-10">
					<input id="loginPassword" type="password" name="password" placeholder="" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">Sign up</button>
				</div>
			</div>
		</form>
	</div>
</div>
